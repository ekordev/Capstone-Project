<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- list_item_first TextView style -->
    <style name="ListItemFirstTextLarge">
        <item name="android:textSize">30sp</item>
    </style>

    <!--Detail Fragment styles-->
    <!--Main Section-->
    <style name="DetailColumnsCommon.DetailMainLeft">
        <item name="android:gravity">end</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--Extras Section-->
    <style name="DetailColumnsCommon.DetailExtrasLeft">
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/detail_extras_label</item>
    </style>

    <!-- Right Columns Only-->
    <style name="DetailColumnsCommon.DetailRight">
        <item name="android:paddingLeft">@dimen/detail_main_right_column_padding</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingStart">@dimen/detail_main_right_column_padding</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="DetailLinearLayoutRight">
        <item name="android:paddingLeft">@dimen/detail_main_right_column_padding</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingStart">@dimen/detail_main_right_column_padding</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <!--Common between both left and right columns-->
    <style name="DetailColumnsCommon">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <!--End of Detail Fragment Styles-->
</resources>
