<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- list_item_first TextView style -->
    <style name="ListItemFirstTextLarge">
        <item name="android:textSize">30sp</item>
    </style>

    <!--Detail Fragment styles-->
    <!--Main Section left column-->
    <style name="DetailColumnsCommon.LeftCommon.DetailMainLeft">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--Extras Section left column-->
    <style name="DetailColumnsCommon.LeftCommon.DetailExtrasLeft">
        <item name="android:textColor">@color/detail_extras_label</item>
    </style>

    <!--Common between left columns-->
    <style name="DetailColumnsCommon.LeftCommon">
        <item name="android:gravity">end</item>
        <item name="android:paddingLeft">@dimen/detail_common_column_outer_padding</item>
        <item name="android:paddingRight">@dimen/detail_left_column_inner_padding</item>
        <item name="android:paddingStart">@dimen/detail_common_column_outer_padding</item>
        <item name="android:paddingEnd">@dimen/detail_left_column_inner_padding</item>
    </style>

    <!-- Main and Extra Section right columns-->
    <style name="DetailColumnsCommon.DetailRight">
        <item name="android:paddingLeft">@dimen/detail_right_column_inner_padding</item>
        <item name="android:paddingRight">@dimen/detail_common_column_outer_padding</item>
        <item name="android:paddingStart">@dimen/detail_right_column_inner_padding</item>
        <item name="android:paddingEnd">@dimen/detail_common_column_outer_padding</item>
    </style>

    <!-- Main and Extra Section right columns that are linear layouts-->
    <style name="DetailLinearLayoutRight">
        <item name="android:paddingLeft">@dimen/detail_right_column_inner_padding</item>
        <item name="android:paddingRight">@dimen/detail_common_column_outer_padding</item>
        <item name="android:paddingStart">@dimen/detail_right_column_inner_padding</item>
        <item name="android:paddingEnd">@dimen/detail_common_column_outer_padding</item>
    </style>

    <!--Common between both left and right columns-->
    <style name="DetailColumnsCommon">
        <item name="android:textSize">@dimen/column_item_text_size</item>
        <item name="android:layout_marginTop">@dimen/column_item_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/column_item_vertical_margin</item>
    </style>
    <!--End of Detail Fragment Styles-->
</resources>